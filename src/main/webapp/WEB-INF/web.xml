<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>My Servlet Test</display-name>

    <servlet>
        <servlet-name>SimpleServlet</servlet-name>
        <servlet-class>org.zhurko.fileshare.SimpleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>org.zhurko.fileshare.controller.UserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SimpleServlet</servlet-name>
        <url-pattern>/SimpleServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/api/v1/users/*</url-pattern>
    </servlet-mapping>
</web-app>